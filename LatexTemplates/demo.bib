@inproceedings{fleury:2000,
	Author = {Fleury, Ann E.},
	Title = {Programming in {J}ava: Student-Constructed Rules},
	Booktitle = {Proceedings SIGCSE'00},
	Pages = {197--201},
	Year = {2000},
	Annote = {Describes the rules that students constructed to explain to themselves
	          how certain things work. These rules do often not explain things
              correctly and/or completely.
              \par
              This can lead to \emph{misconceptions} (i.e., erroneous
              ``understandings'' of concepts) that will likely lead to
              misunderstandings and errors. Such misconceptions are fully
              consistent with a constructivistic view of learning.
              The students learn by integrating new things with already
              known things, based on their current (incomplete) knowledge
              about the subject and related topics.}
}

